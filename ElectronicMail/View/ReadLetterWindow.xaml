<Window x:Class="ElectronicMail.View.ReadLetterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicMail.View"
        mc:Ignorable="d" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10 5" Text="{Binding TitleLetter}"
                    Background="AliceBlue"
                    Grid.Row="0"
                   FontWeight="Bold"
                   FontSize="20"/>
        <TextBlock Margin="10 5" Text="{Binding Body}"
                        Grid.Row="1"
                   FontSize="14"/>
    </Grid>
</Window>
